{
    "model": "Tacotron2",          
    "run_name": "Biaobei",
    "run_description": "tacotron2 do trim without eos and no forward attention",

    
    "audio":{
        
        "num_mels": 80,         
        "num_freq": 2049,       
        "sample_rate": 48000,   
        "frame_length_ms": 50,  
        "frame_shift_ms": 12.5, 
        "preemphasis": 0.98,    
        "min_level_db": -100,   
        "ref_level_db": 20,     
        "power": 1.5,           
        "griffin_lim_iters": 60,
        
        "signal_norm": true,    
        "symmetric_norm": true, 
        "max_norm": 4,          
        "clip_norm": true,      
        "mel_fmin": 125.0,         
        "mel_fmax": 7600.0,        
        "do_trim_silence": true  
    },

    
    "distributed":{
        "backend": "nccl",
        "url": "tcp:\/\/localhost:54321"
    },

    "reinit_layers": null,    

    
    "batch_size": 64,       
    "eval_batch_size":16,   
    "r": 1,                 
    "gradual_training": null, 
    "loss_masking": true,         

    
    "run_eval": true,
    "test_delay_epochs": 300,  
    "test_sentences_file": "test_sentences.txt",  

    
    "grad_clip": 1,                
    "epochs": 3000,                
    "lr": 0.0001,                  
    "lr_decay": false,             
    "wd": 0.000001,         
    "warmup_steps": 4000,          
    
    
    "memory_size": 5,              
    "prenet_type": "original",     
    "prenet_dropout": true,        

    
    "attention_type": "original",  
    "attention_heads": 5,          
    "attention_norm": "softmax",   
    "windowing": false,            
    "use_forward_attn": false,      
    "forward_attn_mask": false,    
    "transition_agent": false,     
    "location_attn": true,        
    "bidirectional_decoder": false,  

    
    "stopnet": true,               
    "separate_stopnet": true,     

    
    "print_step": 1,       
    "save_step": 1000,      
    "checkpoint": true,     
    "tb_model_param_stats": false,     
    
    
    "text_cleaner": "basic_cleaners",
    "enable_eos_bos_chars": false, 
    "num_loader_workers": 4,        
    "num_val_loader_workers": 4,    
    "batch_group_size": 8,  
    "min_seq_len": 6,       
    "max_seq_len": 180,     

    
    
    "output_path": "./output",
 
    
    "phoneme_cache_path": "mozilla_us_phonemes",  
    "use_phonemes": false,           
    "phoneme_language": "zh",     

    
    "use_speaker_embedding": false,     
    "style_wav_for_test": null,          
    "use_gst": false,       

    
    "datasets":   
        [
            {
                "name": "biaobei",
                
                "path": "/search/hadoop07/wuzijun/voice_data/Biaobei/",
                "meta_file_train": "audio_text_train_filelist.txt",
                "meta_file_val": "audio_text_val_filelist.txt"
            }
        ]

}
